Public Property Let letOrgFilePath(ByVal RHS As String)
    myXstrOrgFilePath = RHS
End Property

Public Property Let letPrfx(ByVal RHS As String)
    myXstrPrfx = RHS
End Property

Public Property Let letSffx(ByVal RHS As String)
    myXstrSffx = RHS
End Property

